<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="content" method="upgrade">
	<name>plg_content_imagelazyloading</name>
	<creationDate>2021-07-10</creationDate>
	<author>Tobias Zulauf</author>
	<copyright>(C) 2020 Tobias Zulauf All rights reserved.</copyright>
	<authorUrl>https://www.jah-tz.de</authorUrl>
	<version>1.0.2</version>
	<license>GNU/GPL Version 2 or later</license>
	<description>PLG_CONTENT_IMAGELAZYLOADING_XML_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<files>
		<folder>language</folder>
		<filename plugin="imagelazyloading">imagelazyloading.php</filename>
	</files>
	<updateservers>
		<server type="extension" name="ImageLazyloading Update Site">https://raw.githubusercontent.com/zero-24/plg_content_imagelazyloading/master/update.xml</server>
	</updateservers>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="enabled_image"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="PLG_CONTENT_IMAGELAZYLOADING_SETTING_IMAGE"
					default="1"
					filter="integer"
					>
					<option value="0">JDISABLED</option>
					<option value="1">JENABLED</option>
				</field>
				<field
					name="enabled_iframe"
					type="radio"
					label="PLG_CONTENT_IMAGELAZYLOADING_SETTING_IFRAME"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JDISABLED</option>
					<option value="1">JENABLED</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
